{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vidoxlabs.com/schemas/agent-metadata.schema.json",
  "title": "Agent Metadata Schema",
  "description": "Schema for tracking agent effectiveness, confidence, and compatibility",
  "type": "object",
  "required": ["name", "version", "created", "updated"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique name of the agent"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the agent's purpose"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 creation timestamp"
    },
    "updated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 last update timestamp"
    },
    "confidence_rating": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence rating from 0.0 to 1.0"
    },
    "effectiveness_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Effectiveness score from 0.0 to 1.0"
    },
    "success_rate": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Success rate percentage"
    },
    "usage_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of times this agent has been used"
    },
    "context_compatibility": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of compatible context types"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Categorization tags"
    },
    "author": {
      "type": "string",
      "description": "Author or maintainer"
    },
    "related_agents": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Related or complementary agents"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Required dependencies or prerequisites"
    }
  }
}
